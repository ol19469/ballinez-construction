<script>
  const IMAGES = [
    { src: "/assets/project1_1.jpg", alt: "Siding project — view 1" },
    { src: "/assets/project1_2.jpg", alt: "Siding project — view 2" },
    { src: "/assets/project1_4.jpg", alt: "Siding project — view 3" },
    { src: "/assets/project1_5.jpg", alt: "Siding project — view 4" },
    { src: "/assets/project1_6.jpg", alt: "Siding project — view 5" },
  ];

  const mainImg = document.getElementById("carousel-main-img");
  const caption = document.getElementById("carousel-caption");
  const thumbs = Array.from(document.querySelectorAll(".thumb"));
  const prevBtn = document.querySelector(".carousel-nav.prev");
  const nextBtn = document.querySelector(".carousel-nav.next");
  const main = document.querySelector(".carousel-main");

  let idx = 0;
  let timer = null;
  const ROTATE_MS = 5000;

  function setImage(i, userInitiated = false) {
    idx = (i + IMAGES.length) % IMAGES.length;
    const { src, alt } = IMAGES[idx];

    // Smooth swap
    mainImg.style.opacity = 0;
    requestAnimationFrame(() => {
      mainImg.src = src;
      mainImg.alt = alt;
      caption.textContent = alt;
      mainImg.onload = () => (mainImg.style.opacity = 1);
    });

    // Update thumb state
    thumbs.forEach((t, n) => {
      t.classList.toggle("is-active", n === idx);
      t.setAttribute("aria-selected", String(n === idx));
    });

    // If the user interacted, reset the timer so it doesn’t instantly advance
    if (userInitiated) restart();
  }

  function next() { setImage(idx + 1); }
  function prev() { setImage(idx - 1); }

  function start() {
    if (timer) return;
    timer = setInterval(next, ROTATE_MS);
  }
  function stop() {
    if (timer) { clearInterval(timer); timer = null; }
  }
  function restart() { stop(); start(); }

  // Events
  nextBtn.addEventListener("click", () => setImage(idx + 1, true));
  prevBtn.addEventListener("click", () => setImage(idx - 1, true));
  thumbs.forEach((btn) => {
    btn.addEventListener("click", () => {
      const i = Number(btn.dataset.index);
      setImage(i, true);
    });
  });

  // Pause on hover/focus, resume on leave/blur
  ["mouseenter", "focusin"].forEach(ev => main.addEventListener(ev, stop));
  ["mouseleave", "focusout"].forEach(ev => main.addEventListener(ev, start));

  // Keyboard arrows
  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowRight") { setImage(idx + 1, true); }
    if (e.key === "ArrowLeft") { setImage(idx - 1, true); }
  });

  // Kick things off
  setImage(0);
  start();
</script>


